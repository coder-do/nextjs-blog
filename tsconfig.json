{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/homeStyle/*": [
                "styles/homePage/*"
            ],
            "@/contactStyle/*": [
                "styles/contact/*"
            ],
            "@/layoutStyle/*": [
                "styles/layout/*"
            ],
            "@/postStyle/*": [
                "styles/posts/*"
            ],
            "@/uiStyle/*": [
                "styles/ui/*"
            ],
            "@/homePage/*": [
                "components/home-page/*"
            ],
            "@/contactPage/*": [
                "components/contact/*"
            ],
            "@/layoutPage/*": [
                "components/layout/*"
            ],
            "@/postPage/*": [
                "components/posts/*"
            ],
            "@/uiPage/*": [
                "components/UI/*"
            ],
        },
        "allowJs": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}